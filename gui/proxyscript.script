local function show(self, proxy) -- <5>
	msg.post(proxy, "async_load") -- <8>
end


function init(self)
	msg.post(".", "acquire_input_focus")
	self.current_proxy = nil -- <2>
	msg.post("#", "show_menu") -- <3>
end


