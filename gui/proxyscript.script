function on_message(self, message_id, message, sender)
	if message_id == hash("show_menu") then
		show(self, "#guiproxy")
	elseif message_id == hash("proxy_loaded") then
		self.current_proxy = sender
		msg.post(sender, "enable") 

	elseif message_id == hash("heavy") then
		show(self,"#heavymove")
		heavy=true
	elseif message_id == hash("light") then
		show(self,"#lightmove")
		light =true
	elseif message_id == hash("light unload") then
		msg.post("#lightmove", "unload")
		light = false
	elseif message_id == hash("heavy unload") then
		msg.post("#heavymove", "unload")
		heavy = false
	elseif message_id == hash("run light") then
		print("got run")
		if light == true then
			msg.post("gui:/gui#gui", "light damage")
			msg.post("#", "light unload")
		end
	elseif message_id == hash("run heavy") then
		if heavy == true then
			msg.post("gui:/gui#gui", "heavy damage")
			msg.post("#", "heavy unload")
		end
	end
end

