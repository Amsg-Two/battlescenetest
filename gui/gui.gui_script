function on_message(self, message_id, message, sender)
	print(message_id .. " was sent to self.")
	if message_id == hash("light") then
		msg.post("lightmove:/lightmove#light","load")
		print("light was sent")
	end
	if message_id == hash("heavy") then
		msg.post("heavymove:/heavymove#heavy","load")
		print("heavy was sent")
		 
	end
end

function on_input(self, action_id, action)
	if(action_id == hash("click") and action.pressed) then
		print("button was pressed")
		local light = gui.get_node("light")
		if(gui.pick_node(light,action.x,action.y)) then 
			msg.post("#", "light")
			print("light was hit")
		end
	end
	if(action_id == hash("click") and action.pressed) then
		local heavy = gui.get_node("heavy")
		if(gui.pick_node(heavy,action.x,action.y)) then 
			msg.post("#", "heavy")
			print("heavy was hit")
		end
	end
end

